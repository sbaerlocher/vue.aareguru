{
  "name": "vue.aareguru",
  "version": "2.2.2",
  "type": "module",
  "description": "Vue 3 component that displays the Aare river temperature from Aareguru API.",
  "main": "dist/vue.aareguru.cjs",
  "module": "dist/vue.aareguru.mjs",
  "unpkg": "dist/vue.aareguru.js",
  "jsdelivr": "dist/vue.aareguru.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "serve": "vite",
    "build": "vite build && npm run build:types",
    "build:bundle": "npm run build",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly",
    "build:demo": "vite build --mode demo",
    "preview": "vite preview",
    "lint": "eslint --ext .vue,.js,.ts src/",
    "lint:fix": "eslint --ext .vue,.js,.ts src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "vue-tsc --noEmit",
    "type-check:watch": "vue-tsc --noEmit --watch",
    "validate": "npm run type-check && npm run lint && npm run test",
    "clean": "rm -rf dist coverage node_modules/.vite",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "prepublishOnly": "npm run type-check && npm run test:coverage"
  },
  "files": [
    "dist",
    "src/components/AareGuru.vue",
    "src/types/index.d.ts"
  ],
  "types": "dist/types/src/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/vue.aareguru.mjs",
      "require": "./dist/vue.aareguru.cjs"
    },
    "./types": {
      "types": "./src/types/index.d.ts"
    },
    "./style.css": "./dist/vue.aareguru.css",
    "./package.json": "./package.json"
  },
  "keywords": [
    "vue",
    "vue3",
    "component",
    "aare",
    "aareguru",
    "temperature",
    "switzerland",
    "bern",
    "river"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbaerlocher/vue.aareguru.git"
  },
  "bugs": {
    "url": "https://github.com/sbaerlocher/vue.aareguru/issues"
  },
  "homepage": "https://github.com/sbaerlocher/vue.aareguru#readme",
  "peerDependencies": {
    "axios": "^1.0.0",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@vue/compiler-sfc": "^3.5.23",
    "@vue/test-utils": "^2.4.6",
    "axios": "^1.13.2",
    "eslint": "~9.39.1",
    "eslint-plugin-vue": "~10.6.2",
    "happy-dom": "^20.0.10",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.16",
    "vue": "^3.5.23",
    "vue-tsc": "^3.1.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "overrides": {
    "glob": "^13.0.0"
  }
}
